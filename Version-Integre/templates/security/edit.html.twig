{% extends 'Front/front.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}

    <div id="main">
        <!-- Post -->
        <section class="post">
            <header class="major">
                <span class="date">Update User</span>
            </header>

            <div class="section-content">
                {{ form_start(form , {'attr': {'class':'form-horizontal','novalidate':'novalidate'}} ) }}
                <div class="col-md-12">
                    <fieldset>
                        {{ form_row(form.CIN, {'label':'Votre CIN' ,'attr':{'placeholder': 'CIN...'}}) }}
                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>
                        {{ form_row(form.UserName, {'attr':{'placeholder': 'UserName'}}) }}
                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>
                        {{ form_row(form.Numero, {'attr':{'placeholder': 'numero...'}}) }}
                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>
                        {{ form_row(form.Email, {'label':'Email de clien' ,'attr':{'placeholder': 'Adresse email....'}}) }}
                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>
                        {{ form_row(form.Adresse, {'attr':{'placeholder': 'Votre Adresse'}}) }}
                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>
                        {{ form_row(form.Password, {'attr':{'placeholder': 'Votre password'}}) }}
                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>
                        {{ form_row(form.confirm_password, {'attr':{'placeholder': 'Votre password'}}) }}
                    </fieldset>
                </div>
                <div class="col-md-12">
                    <fieldset>
                        {{ form_row(form.image, {'attr':{'placeholder': 'Votre Image'}}) }}
                    </fieldset>
                </div>

                

                <div class="col-md-12">
                    <fieldset>
                        <button type= "submit" class="btn btn-success"> Modifer ! </button>
                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>

                        <a href="{{ path('client_index') }}">back to list</a>
                    </fieldset>
                </div>

                {{ form_end(form) }}
                 {{ include('security/_delete_form.html.twig') }}
            </div>
        </section>
    </div>
{% endblock %}