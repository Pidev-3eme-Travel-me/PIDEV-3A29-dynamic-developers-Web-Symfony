{% extends 'Front/front.html.twig' %}
{% block body %}

    <div id="main">
        <!-- Post -->
        <section class="post">
            <header class="major">
                <span class="date">April 25, 2017</span>
                <h1>Create new Excursion</h1>
            </header>

            <div class="section-content">
                {{ form_start(form , {'attr': {'class':'form-horizontal','novalidate':'novalidate'}} ) }}
                <div class="col-md-12">
                    <fieldset>
                        {{ form_row(form.Client, {'label':'Votre CIN' ,'attr':{'placeholder': 'CIN...'}}) }}
                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>
                        {{ form_row(form.Nom_Excursion, {'attr':{'placeholder': 'Nom_Excursion'}}) }}
                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>
                        {{ form_row(form.Description_Excursion, {'attr':{'placeholder': 'Description_Excursion...'}}) }}
                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>
                        {{ form_row(form.Date, {'attr':{'placeholder': 'Date'}}) }}
                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>
                        {{ form_row(form.Type_Excursion, {'attr':{'placeholder': 'Type_Excursion'}}) }}
                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>
                        {{ form_row(form.Lieu, {'attr':{'placeholder': 'Lieu'}}) }}
                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>
                        {{ form_row(form.valabilite, {'attr':{'placeholder': 'valabilite'}}) }}
                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>
                        {{ form_row(form.image, {'attr':{'placeholder': 'Image'}}) }}
                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>
                        {{ form_row(form.prix, {'attr':{'placeholder': 'prix'}}) }}
                    </fieldset>
                </div>



                <div class="col-md-12">
                    <fieldset>
                        {{ form_row(form.valabilite) }}
                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>
                        {{ form_row(form.image, {'attr':{'placeholder': 'Confirm_password'}}) }}
                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>
                        <button type= "submit" class="btn btn-success"> Modifier ! </button>
                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>
                        <a href="{{ path('excursion_index') }}">back to list</a>
                    </fieldset>
                </div>

                {{ form_end(form) }}

            </div>

        </section>
    </div>
{% endblock %}